<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/Dealer_card1"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="25dp" />

        <ImageView
            android:id="@+id/Dealer_card2"
            style="@style/ImageStyle2"
            />
        <ImageView
            style="@style/ImageStyle2"
            android:id="@+id/Dealer_card3"
            />
        <ImageView
            style="@style/ImageStyle2"
            android:id="@+id/Dealer_card4"
            />
        <ImageView
            style="@style/ImageStyle2"
            android:id="@+id/Dealer_card5"
/>
    </LinearLayout>

    <TextView
        android:id="@+id/dealerScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop= "140dp"
        android:text="Dealer's Score: "
        android:layout_marginLeft="8dp"

        />

    <TextView
        android:id="@+id/dealerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop= "140dp"
        android:layout_marginLeft="108dp"
        android:text="0"
        />


    <!--player cards-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/Player_card1"
            android:layout_marginTop="300dp"
            />
        <ImageView
            style="@style/ImageStyle"
            android:id="@+id/Player_card2"
            />
        <ImageView
            style="@style/ImageStyle"
            android:id="@+id/Player_card3"
            />
        <ImageView
            style="@style/ImageStyle"
            android:id="@+id/Player_card4"
            />
        <ImageView
            style="@style/ImageStyle"
            android:id="@+id/Player_card5"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/playerScoreLabel"
        style="@style/PlayerTextStyle"
        android:text="Player's Score: "
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/playerScore"
        style="@style/PlayerTextStyle"
        android:layout_marginLeft= "110dp"
        android:text="0"
        />

    <TextView
        android:id="@+id/outcomeText"
        style="@style/PlayerTextStyle"
        android:layout_marginTop= "200dp"
        android:layout_marginLeft="108dp"
        android:text=" "
        />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/Hit_Button"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="10dp"
        android:text="@string/Hit_Button"
        android:onClick="game_Hit"
        />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/Stand_Button"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/Hit_Button"
        android:text="@string/Stand_Button"
        android:onClick="game_Stand"

        />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/New_Game_Button"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="460dp"
        android:text="New Game"
        android:onClick="game_NewGame"
        />


</RelativeLayout>